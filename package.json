{
  "name": "goal-bingo",
  "version": "1.0.0",
  "description": "A goal tracking and bingo-style achievement system",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "dev:clean": "node scripts/dev-clean.js",
    "build": "vite build",
    "build:clean": "npm run clean && vite build",
    "clean": "node scripts/clean-cache.js",
    "preview": "vite preview",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:smoke": "playwright test tests/phaser/scene-transitions.test.js tests/phaser/button-functionality.test.js",
    "test:regression": "playwright test tests/phaser/scene-loading.test.js tests/phaser/data-flow.test.js",
    "test:performance": "playwright test tests/phaser/performance.test.js",
    "test:accessibility": "playwright test tests/phaser/accessibility.test.js",
    "test:error-handling": "playwright test tests/phaser/error-handling.test.js",
    "test:phaser": "playwright test tests/phaser/",
    "test:phaser:smoke": "playwright test tests/phaser/scene-transitions.test.js tests/phaser/button-functionality.test.js --reporter=html",
    "test:phaser:full": "playwright test tests/phaser/ --reporter=html",
    "test:phaser:ci": "playwright test tests/phaser/ --reporter=github",
    "test:coverage": "playwright test --reporter=html --output-dir=test-results/coverage",
    "test:report": "playwright show-report test-results/",
    "test:clean": "rm -rf test-results/ && rm -rf playwright-report/",
    "test:install": "playwright install",
    "test:install-deps": "playwright install-deps",
    "test:all": "npm run test:phaser:full",
    "test:ci": "npm run test:phaser:ci",
    "test:unit": "vitest run",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest --coverage",
    "test:webgl": "node webgl-test-runner.js"
  },
  "keywords": [
    "goals",
    "tracking",
    "bingo",
    "achievements",
    "productivity"
  ],
  "author": "goatindex",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-transform-modules-commonjs": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@playwright/test": "^1.55.0",
    "@vitest/ui": "^1.0.0",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jsdom": "^27.0.0",
    "puppeteer": "^24.20.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "phaser": "^3.70.0"
  }
}
